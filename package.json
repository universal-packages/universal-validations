{
  "name": "@universal-packages/validations",
  "version": "1.0.3",
  "description": "Simple validation system based on decorators to enable a class to validate a subject properties.",
  "author": "David De Anda <david@universal-packages.com> (https://github.com/universal-packages)",
  "license": "MIT",
  "main": "index.js",
  "types": "index.d.ts",
  "repository": "git@github.com:universal-packages/universal-validations.git",
  "scripts": {
    "build": "tsc --p tsconfig.dis.json",
    "test": "jest --watch",
    "test:full": "jest --coverage --verbose",
    "test:clear": "jest --clearCache",
    "format": "prettier --write \"./{src,tests}/**/*.{ts,tsx,js,jsx,json}\"",
    "update-dependents": "umaintenance update-dependents"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@types/jest": "^29.5.4",
    "@types/node": "^17.0.39",
    "@universal-packages/maintenance": "^1.2.2",
    "jest": "^29.6.4",
    "prettier": "^2.8.7",
    "ts-jest": "^29.1.1",
    "typescript": "^4.7.3"
  },
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.ts"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 180,
    "trailingComma": "none",
    "importOrder": [
      "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,
    "importOrderParserPlugins": [
      "typescript",
      "jsx",
      "classProperties",
      "decorators-legacy"
    ]
  }
}
